{
  "name": "webpack-boilerplate",
  "main": "main-electron-process.js",
  "engines": {
    "node": "10.15.3"
  },
  "version": "1.0.0",
  "description": "boilerplate app",
  "private": true,
  "scripts": {
    "pack": "yarn run build && electron-builder --dir",
    "build": "webpack --config webpack.prod.js",
    "dist": "yarn run build && electron-builder",
    "start:dev": "electron . & yarn start:webpack-dev-server",
    "start:webpack-dev-server": "webpack-dev-server --config webpack.dev.js",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "files": [
      "./main-electron-process.js",
      "built/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "appId": "com.electron.boilerplate-app",
    "productName": "Boilerplate App",
    "copyright": "Copyright Â© 2019 Joe Barnett",
    "linux": {
      "target": "deb",
      "executableName": "Boilerplate-App"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "buildResources": "built",
      "output": "dist"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.1.0",
    "electron": "^6.0.4",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.6",
    "eslint": "^6.2.2",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^3.0.1",
    "find-free-port": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "dotenv": "^8.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
